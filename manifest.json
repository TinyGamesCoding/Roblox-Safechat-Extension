{
	"manifest_version": 2,
	"name": "Roblox Safechat",
	"description": "Roblox's old safechat feature, from 2007 to 2014, ported over to chrome! Made by @Tiny_Games on YT.",
	"version": "1.1",
	"icons": {
		"16": "icons/icon32.png",
		"32": "icons/icon32.png",
		"48": "icons/icon32.png",
		"128": "icons/icon32.png"
	},
	"background" : {
		"scripts": ["background.js"]
	},
	"permissions": [
		"contextMenus",
		"clipboardRead",
		"clipboardWrite"
	],
	"content_scripts": [
		{
		  "matches": ["<all_urls>"],
		  "js": ["content_script.js"]
		}
	]
}